@model GrupoColorado.Models.LoginViewModel
@{
  ViewData["Title"] = "Login";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="max-width: 400px;">
  <h3 class="text-center mb-4">Acesso ao Sistema</h3>

  <form asp-action="Login" method="post">
    <div class="form-group mb-3">
      <label asp-for="Email" class="form-label">E-mail</label>
      <input asp-for="Email" class="form-control" placeholder="Informe seu e-mail" />
      <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
      <label asp-for="Password" class="form-label">Senha</label>
      <input asp-for="Password" class="form-control" type="password" placeholder="Informe sua senha" />
      <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    
    <br />
    <br />

    <button type="submit" class="btn btn-primary w-100">Entrar</button>
  </form>

  @if (!ViewData.ModelState.IsValid)
  {
    <div class="alert alert-danger mt-3">
      Usuário ou senha inválidos.
    </div>
  }
</div>

@section Scripts {
  <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
