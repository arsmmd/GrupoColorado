@model GrupoColorado.Models.LoginViewModel
@{
  ViewData["Title"] = "Login";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="max-width: 400px;">
  <h3 class="text-center mb-4">Acesso ao Sistema</h3>

  <form id="formLogin">
    <div class="form-group mb-3">
      <label for="Email" class="form-label">E-mail</label>
      <input id="Email" name="Email" class="form-control" placeholder="Informe seu e-mail" maxlength="250" />
      <span class="text-danger field-validation-valid" data-valmsg-for="Email"></span>
    </div>

    <div class="form-group mb-3">
      <label for="Password" class="form-label">Senha</label>
      <input id="Password" name="Password" class="form-control" type="password" placeholder="Informe sua senha" maxlength="64" />
      <span class="text-danger field-validation-valid" data-valmsg-for="Password"></span>
    </div>

    <button id="btnLogin" type="submit" class="btn btn-primary w-100">Entrar</button>
  </form>
</div>

@section Scripts {
  <script src="~/js/account/login.js"></script>
}