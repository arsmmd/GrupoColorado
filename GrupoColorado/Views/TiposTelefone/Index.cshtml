@{
  ViewData["Title"] = "Listagem de Tipos de Telefone";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2 class="mb-0">Tipos de Telefone</h2>
  <button type="button" class="btn btn-success" id="btnAdicionar">
    <i class="fas fa-plus"></i> Adicionar
  </button>
</div>
<br />
<br />

<table id="tiposTelefoneTable" class="display nowrap" style="width:100%">
  <thead>
    <tr>
      <th>Código</th>
      <th>Descrição</th>
      <th>Data de Inserção</th>
      <th>Ações</th>
    </tr>
    <tr>
      <th><input type="text" placeholder="Filtrar por Código do Tipo do Telefone" class="form-control form-control-sm" /></th>
      <th><input type="text" placeholder="Filtrar por parte da Descrição" class="form-control form-control-sm" /></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
</table>

<div class="modal fade" id="modalTipoTelefone" tabindex="-1" role="dialog" aria-labelledby="modalTipoTelefoneLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <form id="formTipoTelefone">
        <div class="modal-header">
          <h5 class="modal-title" id="modalTipoTelefoneLabel">Editar Tipo de Telefone</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" id="codigoTipoTelefone" name="codigoTipoTelefone" />
          <div class="mb-3">
            <label>Descrição</label>
            <input type="text" id="descricaoTipoTelefone" name="descricaoTipoTelefone" class="form-control" required maxlength="80" />
          </div>
          <div class="readonly-fields">
            <div class="mb-3">
              <label>Data de Inserção</label>
              <input type="text" id="dataInsercao" name="dataInsercao" class="form-control" readonly />
            </div>
            <div class="mb-3">
              <label>Usuário de Inserção</label>
              <select id="usuarioInsercao" name="usuarioInsercao" class="form-select" disabled>
                <option value="">Selecione</option>
              </select>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button id="btnSalvar" type="submit" class="btn btn-success">Salvar</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        </div>
      </form>
    </div>
  </div>
</div>

@section Scripts {
  <script src="~/js/tipostelefone/index.js"></script>
}